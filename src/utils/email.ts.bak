import nodemailer from "nodemailer";
import { logger } from "./logger";

interface SendEmailOptions {
  to: string;
  subject: string;
  html?: string;
  text?: string;
}

class EmailService {
  private transporter: ReturnType<typeof nodemailer.createTransport> | null = null;
  private isConfigured = false;

  constructor() {
    void this.setupTransporter();
  }

  private async setupTransporter() {
    try {
      const host = process.env.SMTP_HOST || process.env.EMAIL_HOST;
      const portStr = process.env.SMTP_PORT || process.env.EMAIL_PORT || "587";
      const port = parseInt(portStr, 10);
      const secure = (process.env.SMTP_SECURE || "false") === "true";
      const user = process.env.SMTP_USER || process.env.EMAIL_USER;
      const pass = process.env.SMTP_PASS || process.env.EMAIL_PASS;

      if (!host || !user || !pass) {
        this.isConfigured = false;
        logger.warn("‚ö†Ô∏è Servi√ßo de email n√£o configurado - falta HOST/USER/PASS");
        return;
      }

      this.transporter = nodemailer.createTransport({
        host,
        port,
        secure, // true = TLS, false = STARTTLS
        auth: { user, pass },
      });

      try {
        await this.transporter.verify();
        this.isConfigured = true;
        logger.info("‚úÖ Servi√ßo de email configurado com sucesso e verificado");
      } catch (verifyErr) {
        this.isConfigured = false;
        logger.error("‚ùå Falha ao verificar transporte de email:", verifyErr);
      }
    } catch (error) {
      logger.error("‚ùå Erro ao configurar servi√ßo de email:", error);
      this.isConfigured = false;
    }
  }

  public async sendEmail(options: SendEmailOptions): Promise<boolean> {
    if (!this.isConfigured || !this.transporter) {
      logger.warn(`üì® Email n√£o enviado (servi√ßo n√£o configurado): ${options.subject} para ${options.to}`);
      return false;
    }

    try {
      const mailOptions = {
        from: process.env.EMAIL_FROM || "BetForbes <noreply@betforbes.com>",
        to: options.to,
        subject: options.subject,
        html: options.html,
        text: options.text,
      };
      await this.transporter.sendMail(mailOptions);
      logger.info(`üì® Email enviado com sucesso: ${options.subject} para ${options.to}`);
      return true;
    } catch (error) {
      logger.error(`‚ùå Erro ao enviar email para ${options.to}:`, error);
      return false;
    }
  }

